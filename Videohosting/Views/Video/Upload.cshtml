@model Videohosting.Models.Video

@{
    ViewBag.Title = "Upload new video";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h3>Add video</h3>

<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("Upload", "Video", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", required = "required", maxlength = "500" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <p>
                <label class="btn btn-primary">
                    Browse&hellip; <input type="file" name="file" style="display: none;" required />
                </label> @ViewBag.ErrorMessage                
            </p>
            <p>
                <div>
                    <input type="submit" value="Upload" name="upload" id="upload" class="btn btn-success" />
                </div>
            </p>
            <p>
                @Html.ActionLink("Back to channel", "Index", "Channel")
            </p>
        }
    </div>
</div>
