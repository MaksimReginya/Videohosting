@using Microsoft.AspNet.Identity
@model System.Collections.Generic.List<Videohosting.Models.Video>

<table>    
    @if (Model?.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a href="@Url.Action("Display", "Video", new {name = item.FilePath})" type="video/mp4">
                        <video style="outline: none; width: 60%;" >
                            <source src="@Url.Action("ShowVideo", "Video", new {filePath = item.FilePath})" type="video/mp4">
                        </video>
                    </a>
                </td>
            </tr>  
        }
    }
</table>